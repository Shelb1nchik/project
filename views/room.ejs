<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>videoChatApp</title>
    <link rel="stylesheet" href="style.css" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script>
      const ROOM_ID = "<%= roomId %>";
    </script>
  </head>
  <body>
    <div class="header">
      <div class="logo">
        <div class="header__back">
          <i class="fas fa-angle-left"></i>
        </div>
        <h3>Video Chat</h2>
      </div>
    </div>  
    <div class="main">
    <div class="main__left">
      <div class="videos__group">
        <div id="video-grid">

        </div>
      </div>
      <div class="options">
        <div class="options__left">
          <div id="stopVideo" class="options__button">
            <i class="fa fa-video-camera"></i>
          </div>
          <div id="muteButton" class="options__button">
            <i class="fa fa-microphone"></i>
          </div>
          <div id="showChat" class="options__button">
            <i class="fa fa-comment"></i>
          </div>
        </div>
        <div class="options__right">
          <div id="inviteButton" class="options__button">
            <i class="fas fa-user-plus"></i>
          </div>
          <div class "video-control" id "video-control">
            <button id="stopScreenShareButton" class="hidden">Stop Demonstration</button>
          </div>
          <button id="startScreenShareButton" class="options__button">Start Screen Share</button>
          <div id="createInteractive" class="options__button">Create Interactive</div>
          <div class="overlay" id="overlay">
            <div class="modal">
              <button id="closeModal" class="close-button">&times;</button>
              <div class ="interactive-menu">
                <h2>Select Interactive Type</h2>
                <button id="createQuiz">Create Quiz</button>
                <div id="quizModal" class="sub-menu">
                  <button id="closeQuizModal">&times;</button>
                  <h2>Create Quiz</h2>
                  <label for="quizQuestion">Question:</label>
                  <input type="text" id="quizQuestion" placeholder="Enter your question">
                  <div id="quizOptions">
                  </div>
                  <button id="addOption">Add Option</button>
                  <button id="startQuiz">Start Quiz</button>
                  <p id="quizError" class="error-message"></p>
                </div>
                <button id="createSurvey">Create Survey</button>
                <div id="surveyModal" class="sub-menu">
                  <button id="closeSurveyModal" class="close-button">&times;</button>
                  <h2>Create Survey</h2>
                  <input type="text" id="surveyQuestion" placeholder="Enter your question">
                  <div class="predefined-answers">
                    <p>Yes</p>
                    <p>Almost</p>
                    <p>No</p>
                  </div>
                  <button id="startSurvey">Start a survey</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="main__right">
      <div class="main__chat_window">
          <div class="messages">

          </div>
      </div>
      <div class="main__message_container">
        <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here...">
        <div id="send" class="options__button">
          <i class="fa fa-plus" aria-hidden="true"></i>
        </div>
      </div>
    </div>
  </div>
  </body>
  <script src="script.js"></script>
</html>